<%- include('partials/header') %>

<section class="max-w-4xl mx-auto py-10">
  <h2 class="text-2xl font-bold mb-6 text-center">Your Access Logs</h2>

  <% if (logs.length === 0) { %>
  <p class="text-center text-gray-500">No access logs found.</p>
  <% } else { %>
  <div class="overflow-x-auto">
    <table class="w-full table-auto border border-gray-200">
      <thead>
        <tr class="bg-gray-100 text-left text-sm text-gray-600 uppercase">
          <th class="px-4 py-2">Login Time</th>
          <th class="px-4 py-2">Logout Time</th>
          <th class="px-4 py-2">Session Duration</th>
        </tr>
      </thead>
      <tbody class="text-sm text-gray-700">
        <% logs.forEach(log => { %>
        <tr class="border-t hover:bg-gray-50">
          <td class="px-4 py-2">
            <%= new Date(log.loginTime).toLocaleString() %>
          </td>
          <td class="px-4 py-2">
            <%= log.logoutTime ? new Date(log.logoutTime).toLocaleString() :
            'Active Session' %>
          </td>
          <td class="px-4 py-2">
            <% if (log.logoutTime) { %> <% const duration = new
            Date(log.logoutTime) - new Date(log.loginTime); const minutes =
            Math.floor(duration / 60000); const seconds = Math.floor((duration %
            60000) / 1000); %> <%= minutes %> min <%= seconds %> sec <% } else {
            %>
            <span class="text-green-600">Currently Active</span>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>

  <div class="mt-6 text-center">
    <a href="/dashboard" class="text-blue-600 hover:underline"
      >Back to Dashboard</a
    >
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="max-w-4xl mx-auto py-10">
  <h2 class="text-2xl font-bold mb-6 text-center">User Access Logs</h2>

  <!-- Filter Form -->
  <form method="GET" class="mb-6 flex gap-4 justify-center">
    <input
      type="date"
      name="date"
      value="<%= filterDate || '' %>"
      class="border px-3 py-2 rounded"
    />
    <button
      type="submit"
      class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
    >
      Filter by Date
    </button>
  </form>

  <% if (logs.length === 0) { %>
  <p class="text-center text-gray-500">No logs found.</p>
  <% } else { %>
  <table class="w-full table-auto border border-gray-200">
    <thead>
      <tr class="bg-gray-100 text-left text-sm text-gray-600 uppercase">
        <th class="px-4 py-2">Login Time</th>
        <th class="px-4 py-2">Logout Time</th>
      </tr>
    </thead>
    <tbody class="text-sm text-gray-700">
      <% logs.forEach(log => { %>
      <tr class="border-t">
        <td class="px-4 py-2">
          <%= new Date(log.loginTime).toLocaleString() %>
        </td>
        <td class="px-4 py-2">
          <%= log.logoutTime ? new Date(log.logoutTime).toLocaleString() :
          'Active' %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>
</section>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Greeting -->
    <div
      class="bg-gradient-to-r from-blue-800 to-blue-500 text-white rounded-lg p-6 shadow mb-8"
    >
      <h1 class="text-3xl font-bold">Welcome, <%= userName %> ðŸ‘‹</h1>
      <p class="mt-2 text-white/90">
        Manage your account, orders, and devices here.
      </p>
    </div>

    <!-- Grid layout -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <!-- Sidebar -->
      <aside class="md:col-span-1 bg-white rounded-lg shadow p-4 space-y-4">
        <div class="flex flex-col items-center">
          <div
            class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center text-3xl text-gray-600"
          >
            <i class="fas fa-user-circle"></i>
          </div>
          <h2 class="mt-2 font-semibold text-lg"><%= userName %></h2>
          <span class="text-sm text-gray-500">Customer</span>
        </div>

        <nav class="space-y-2 mt-4">
          <a href="/devices" class="block text-sm text-blue-600 hover:underline"
            >Browse Devices</a
          >
          <a href="/orders" class="block text-sm text-blue-600 hover:underline"
            >My Orders</a
          >
          <a
            href="/payments"
            class="block text-sm text-blue-600 hover:underline"
            >My Payments</a
          >
          <a href="/logout" class="block text-sm text-red-500 hover:underline"
            >Logout</a
          >
        </nav>
      </aside>

      <!-- Dashboard cards -->
      <div
        class="md:col-span-3 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
      >
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="text-blue-600 text-3xl mb-2">
            <i class="fas fa-box"></i>
          </div>
          <h3 class="text-lg font-semibold mb-1">Orders</h3>
          <p class="text-sm text-gray-500">
            View your current and past orders.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow">
          <div class="text-green-600 text-3xl mb-2">
            <i class="fas fa-credit-card"></i>
          </div>
          <h3 class="text-lg font-semibold mb-1">Payments</h3>
          <p class="text-sm text-gray-500">
            Manage payment history and billing.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow">
          <div class="text-purple-600 text-3xl mb-2">
            <i class="fas fa-cog"></i>
          </div>
          <h3 class="text-lg font-semibold mb-1">Settings</h3>
          <p class="text-sm text-gray-500">
            Update your profile and preferences.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

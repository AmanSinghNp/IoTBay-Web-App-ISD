<%- include('partials/header') %>

<section class="bg-gray-100 py-10 px-4">
  <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
    <% if (device.imageUrl) { %>
    <img
      src="<%= device.imageUrl %>"
      alt="<%= device.name %>"
      class="w-full h-72 object-cover"
    />
    <% } %>

    <div class="p-6">
      <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= device.name %></h1>
      <p class="text-gray-500 text-sm mb-4">
        <%= device.brand %> — <%= device.catalog %>
      </p>
      <p class="text-gray-700 mb-4"><%= device.description %></p>

      <div class="flex items-center justify-between mb-4">
        <span class="text-xl text-blue-600 font-semibold"
          >$<%= device.price.toFixed(2) %></span
        >
        <% if (device.stock > 0) { %>
        <span class="text-green-600 font-medium">In Stock</span>
        <% } else { %>
        <span class="text-red-600 font-medium">Out of Stock</span>
        <% } %>
      </div>

      <a href="/devices" class="text-blue-600 hover:underline"
        >← Back to Devices</a
      >
    </div>
  </div>
</section>

<%- include('partials/footer') %>

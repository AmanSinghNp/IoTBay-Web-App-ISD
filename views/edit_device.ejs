<%- include('partials/header') %>

<section class="max-w-2xl mx-auto my-10 bg-white p-8 shadow rounded">
  <h2 class="text-2xl font-bold mb-6 text-center">Edit Device</h2>

  <form method="POST" action="/devices/edit/<%= device.id %>" class="space-y-4">
    <input
      type="text"
      name="name"
      value="<%= device.name %>"
      class="w-full border px-4 py-2 rounded"
      required
    />
    <input
      type="text"
      name="brand"
      value="<%= device.brand %>"
      class="w-full border px-4 py-2 rounded"
      required
    />
    <input
      type="text"
      name="catalog"
      value="<%= device.catalog %>"
      class="w-full border px-4 py-2 rounded"
      required
    />
    <input
      type="number"
      step="0.01"
      name="price"
      value="<%= device.price %>"
      class="w-full border px-4 py-2 rounded"
      required
    />
    <input
      type="number"
      name="stock"
      value="<%= device.stock %>"
      class="w-full border px-4 py-2 rounded"
      required
    />
    <textarea
      name="description"
      class="w-full border px-4 py-2 rounded"
      rows="3"
      required
    >
<%= device.description %></textarea
    >
    <input
      type="text"
      name="imageUrl"
      value="<%= device.imageUrl %>"
      class="w-full border px-4 py-2 rounded"
    />

    <div class="flex justify-end gap-3">
      <a href="/devices" class="text-gray-600 hover:underline">Cancel</a>
      <button
        type="submit"
        class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700"
      >
        Update
      </button>
    </div>
  </form>
</section>

<%- include('partials/footer') %>

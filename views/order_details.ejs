<%- include('partials/header') %>

<section class="min-h-screen bg-gray-100 py-8 px-4">
  <div class="max-w-xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
      Order #<%= order.id %> Details
    </h2>

    <div class="space-y-4">
      <div class="bg-gray-50 p-4 rounded-md">
        <h3 class="font-semibold text-gray-900 mb-2">Order Information</h3>
        <ul class="space-y-2 text-sm">
          <li class="flex justify-between">
            <span class="text-gray-600">Status:</span>
            <span
              class="font-medium <%= order.status === 'Placed' ? 'text-green-600' : order.status === 'Cancelled' ? 'text-red-600' : 'text-gray-600' %>"
            >
              <%= order.status %>
            </span>
          </li>
          <li class="flex justify-between">
            <span class="text-gray-600">Order Date:</span>
            <span class="font-medium"
              ><%= new Date(order.createdAt).toLocaleString() %></span
            >
          </li>
          <% if (order.anonymousEmail) { %>
          <li class="flex justify-between">
            <span class="text-gray-600">Contact Email:</span>
            <span class="font-medium"><%= order.anonymousEmail %></span>
          </li>
          <% } %>
        </ul>
      </div>

      <div class="mt-6">
        <h3 class="font-semibold text-gray-900 mb-3">Order Items</h3>
        <div class="divide-y divide-gray-200">
          <% let orderTotal = 0; %> <% order.OrderItems.forEach(function(item) {
          const itemTotal = item.price * item.quantity; orderTotal += itemTotal;
          %>
          <div class="py-4">
            <div class="flex justify-between items-start">
              <div>
                <h4 class="font-medium text-gray-900">
                  <%= item.Device.name %>
                </h4>
                <p class="text-sm text-gray-500">
                  <%= item.Device.brand %> · <%= item.Device.catalog %>
                </p>
                <p class="mt-1 text-sm">
                  <span class="text-gray-600"
                    ><%= item.quantity %> × $<%= item.price.toFixed(2) %></span
                  >
                </p>
              </div>
              <span class="font-medium">$<%= itemTotal.toFixed(2) %></span>
            </div>
          </div>
          <% }); %>

          <div class="py-4">
            <div class="flex justify-between">
              <span class="font-semibold">Order Total:</span>
              <span class="font-semibold">$<%= orderTotal.toFixed(2) %></span>
            </div>
          </div>
        </div>
      </div>

      <% if (order.Payment) { %>
      <div class="mt-4 p-4 bg-blue-50 rounded">
        <h3 class="font-semibold mb-2">Payment Info</h3>
        <ul class="space-y-1 text-sm">
          <li class="flex justify-between">
            <span class="text-gray-600">Method:</span>
            <span><%= order.Payment.paymentMethod %></span>
          </li>
          <li class="flex justify-between">
            <span class="text-gray-600">Status:</span>
            <span><%= order.Payment.status %></span>
          </li>
          <li class="flex justify-between">
            <span class="text-gray-600">Amount:</span>
            <span>$<%= order.Payment.amount.toFixed(2) %></span>
          </li>
          <li class="flex justify-between">
            <span class="text-gray-600">Transaction ID:</span>
            <span class="font-mono text-xs"
              ><%= order.Payment.transactionId %></span
            >
          </li>
        </ul>
      </div>
      <% } %> <% if (order.Shipment) { %>
      <div class="mt-4 p-4 bg-green-50 rounded">
        <h3 class="font-semibold mb-2">Shipment Info</h3>
        <ul class="space-y-1 text-sm">
          <li class="flex justify-between">
            <span class="text-gray-600">Method:</span>
            <span><%= order.Shipment.method %></span>
          </li>
          <li class="flex justify-between">
            <span class="text-gray-600">Date:</span>
            <span><%= order.Shipment.shipmentDate %></span>
          </li>
          <li class="flex justify-between">
            <span class="text-gray-600">Finalised:</span>
            <span><%= order.Shipment.finalised ? 'Yes' : 'No' %></span>
          </li>
        </ul>
      </div>
      <% } %>
    </div>

    <div class="mt-6 flex justify-between">
      <a
        href="<%= locals.anonymousId ? '/' : '/orders' %>"
        class="text-blue-600 hover:underline"
      >
        <%= locals.anonymousId ? '← Back to Homepage' : '← Back to Orders' %>
      </a>

      <div class="flex gap-2">
        <% if (order.status === "Placed") { %>
        <a
          href="/orders/edit/<%= order.id %><%= locals.anonymousId ? '?anonymousId=' + anonymousId : '' %>"
          class="bg-blue-600 text-white text-sm px-4 py-2 rounded hover:bg-blue-700"
        >
          Edit Order
        </a>
        <form
          action="/orders/cancel/<%= order.id %><%= locals.anonymousId ? '?anonymousId=' + anonymousId : '' %>"
          method="POST"
          onsubmit="return confirm('Are you sure you want to cancel this order?');"
        >
          <button
            class="bg-red-600 text-white text-sm px-4 py-2 rounded hover:bg-red-700"
          >
            Cancel Order
          </button>
        </form>
        <% } %>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<section class="min-h-screen bg-gray-100 py-10">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-gray-800">My Payments</h1>
      <p class="text-gray-500 mt-2">
        Manage your payments and view your transaction history here.
      </p>
    </div>

    <!-- Create Payment Button -->
    <div class="flex justify-end mb-6">
      <a
        href="/payments/new"
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
      >
        + Make a Payment
      </a>
    </div>

    <!-- Payments Table -->
    <% if (!payments || payments.length === 0) { %>
    <p class="text-center text-gray-500">No payment records found.</p>
    <% } else { %>
    <div class="overflow-x-auto bg-white shadow rounded-lg">
      <table class="min-w-full text-sm text-left text-gray-700">
        <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
          <tr>
            <th class="px-6 py-3">Order ID</th>
            <th class="px-6 py-3">Amount</th>
            <th class="px-6 py-3">Method</th>
            <th class="px-6 py-3">Status</th>
            <th class="px-6 py-3">Date</th>
          </tr>
        </thead>
        <tbody>
          <% payments.forEach(payment => { %>
          <tr class="border-t hover:bg-gray-50">
            <td class="px-6 py-4">
              #<%= payment.orderId %> - <%= payment.Order ? payment.Order.status
              : 'Unknown' %>
            </td>
            <td class="px-6 py-4">$<%= payment.amount.toFixed(2) %></td>
            <td class="px-6 py-4"><%= payment.paymentMethod %></td>
            <td class="px-6 py-4">
              <span
                class="<%= payment.status === 'Completed' ? 'text-green-600' : payment.status === 'Pending' ? 'text-yellow-600' : 'text-red-600' %> font-medium"
              >
                <%= payment.status %>
              </span>
            </td>
            <td class="px-6 py-4">
              <%= new Date(payment.createdAt).toLocaleString() %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>

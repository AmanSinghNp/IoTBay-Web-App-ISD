<%- include('partials/header') %>

<!-- Product Page Container -->
<div class="relative">
  <!-- Continue Shopping (absolute) -->
  <a href="/devices" class="absolute top-4 left-4 text-blue-600 hover:underline font-medium">
     Continue Shopping
  </a>

  <% if (flash) { %>
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
      <div class="p-4 rounded <%= flash.type === 'success' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
        <%= flash.message %>
      </div>
    </div>
  <% } %>
</div>

<div class="min-h-screen flex flex-col">
  <main class="flex-grow">
    <section class="bg-gray-100 py-20">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-2 gap-16">

        <!-- LEFT: Product Details -->
        <div class="bg-white p-8 rounded-lg shadow-lg space-y-6">
          <!-- Image -->
          <% if (product.imageUrl) { %>
            <img src="<%= product.imageUrl %>" alt="<%= product.name %>"
                 class="w-full h-64 object-cover rounded-lg" />
          <% } %>

          <!-- Name & Price -->
          <div>
            <h1 class="text-3xl font-bold mb-2"><%= product.name %></h1>
            <p class="text-2xl text-gray-800">$<%= product.price.toFixed(2) %></p>
          </div>

          <!-- Additional Details -->
          <ul class="text-gray-700 space-y-1">
            <li><span class="font-medium">Brand:</span> <%= product.brand %></li>
            <li><span class="font-medium">Category:</span> <%= product.catalog %></li>
            <li><span class="font-medium">Description:</span> <%= product.description || 'N/A' %></li>
            <li><span class="font-medium">In Stock:</span> <%= product.stock %> unit<%= product.stock === 1 ? '' : 's' %></li>
          </ul>
        </div>

        <!-- RIGHT: Cart Section -->
        <div class="bg-white p-8 rounded-lg shadow-lg space-y-6">
          <h2 class="text-xl font-semibold">Your Cart</h2>

          <!-- Stock Status -->
          <p class="font-medium <%= product.stock > 0 ? 'text-green-600' : 'text-red-500' %>">
            <%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %>
          </p>

          <!-- Quantity & Add to Cart -->
          <form action="/cart/add" method="POST" class="space-y-4">
            <input type="hidden" name="productId" value="<%= product.id %>" />

            <div>
              <label for="quantity" class="block mb-1 font-medium">Quantity:</label>
              <select name="quantity" id="quantity" class="border rounded w-full p-2">
                <% for (let i = 1; i <= Math.min(product.stock, 10); i++) { %>
                  <option value="<%= i %>"><%= i %></option>
                <% } %>
              </select>
            </div>

            <button
              type="submit"
              class="w-full py-3 rounded transition <%= product.stock > 0 ? 'bg-yellow-500 text-white hover:bg-yellow-600' : 'bg-gray-400 text-gray-700 cursor-not-allowed' %>"
              <%= product.stock > 0 ? '' : 'disabled' %>
            >
              Add to Cart
            </button>
          </form>

          <!-- Show Cart Button -->
          <div class="mt-4 text-center">
            <a href="/cart" class="inline-block bg-blue-600 text-white py-2 px-6 rounded hover:bg-blue-700">
              Show Cart
            </a>
          </div>
        </div>

      </div>
    </section>
  </main>
  <%- include('partials/footer') %>
</div>

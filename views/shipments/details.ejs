<%- include('../partials/header') %>

<section class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            Shipment #<%= shipment.id %>
          </h1>
          <p class="text-gray-600">
            Detailed shipment information and delivery details
          </p>
        </div>
        <div class="flex items-center gap-3">
          <% if (shipment.finalised) { %>
          <span
            class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800"
          >
            <svg
              class="w-4 h-4 mr-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              ></path>
            </svg>
            Finalized
          </span>
          <% } else { %>
          <span
            class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800"
          >
            <svg
              class="w-4 h-4 mr-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            Pending
          </span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if (locals.flash && locals.flash.success) { %>
    <div
      class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg"
    >
      <%= locals.flash.success %>
    </div>
    <% } %> <% if (locals.flash && locals.flash.error) { %>
    <div
      class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg"
    >
      <%= locals.flash.error %>
    </div>
    <% } %>

    <!-- Back Navigation -->
    <div class="mb-6">
      <a
        href="/shipments"
        class="inline-flex items-center text-blue-600 hover:text-blue-700 hover:underline"
      >
        <svg
          class="w-5 h-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          ></path>
        </svg>
        Back to Shipments
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Shipment Information -->
        <div class="bg-white rounded-lg shadow-sm border">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">
              Shipment Information
            </h2>
          </div>
          <div class="p-6">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <dt class="text-sm font-medium text-gray-500">Shipment ID</dt>
                <dd class="mt-1 text-lg font-semibold text-gray-900">
                  #<%= shipment.id %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                  <% if (shipment.finalised) { %>
                  <span
                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                  >
                    Finalized
                  </span>
                  <% } else { %>
                  <span
                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"
                  >
                    Pending
                  </span>
                  <% } %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">
                  Shipping Method
                </dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= shipment.method %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Shipment Date</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= new
                  Date(shipment.shipmentDate).toLocaleDateString('en-AU', {
                  weekday: 'long', year: 'numeric', month: 'long', day:
                  'numeric' }) %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= new Date(shipment.createdAt).toLocaleDateString('en-AU')
                  %> at <%= new
                  Date(shipment.createdAt).toLocaleTimeString('en-AU', { hour:
                  '2-digit', minute: '2-digit' }) %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= new Date(shipment.updatedAt).toLocaleDateString('en-AU')
                  %> at <%= new
                  Date(shipment.updatedAt).toLocaleTimeString('en-AU', { hour:
                  '2-digit', minute: '2-digit' }) %>
                </dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- Delivery Address -->
        <div class="bg-white rounded-lg shadow-sm border">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">
              Delivery Address
            </h2>
          </div>
          <div class="p-6">
            <div class="bg-gray-50 rounded-lg p-4">
              <h3 class="font-medium text-gray-900 mb-2">
                <%= shipment.Address.label %>
              </h3>
              <div class="text-sm text-gray-700 space-y-1">
                <p><%= shipment.Address.street %></p>
                <p>
                  <%= shipment.Address.city %>, <%= shipment.Address.postcode %>
                </p>
                <p><%= shipment.Address.country %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Related Order -->
        <div class="bg-white rounded-lg shadow-sm border">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-semibold text-gray-900">Related Order</h2>
              <a
                href="/orders/view/<%= shipment.Order.id %>"
                class="inline-flex items-center text-blue-600 hover:text-blue-700 hover:underline text-sm"
              >
                View Full Order
                <svg
                  class="w-4 h-4 ml-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
          <div class="p-6">
            <div class="mb-4">
              <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Order ID</dt>
                  <dd class="mt-1 text-sm font-semibold text-gray-900">
                    #<%= shipment.Order.id %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">
                    Order Status
                  </dt>
                  <dd class="mt-1">
                    <span
                      class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= shipment.Order.status === 'Placed' ? 'bg-green-100 text-green-800' : shipment.Order.status === 'Cancelled' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>"
                    >
                      <%= shipment.Order.status %>
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Order Date</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= new
                    Date(shipment.Order.createdAt).toLocaleDateString('en-AU')
                    %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Total Items</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= shipment.Order.OrderItems.length %>
                  </dd>
                </div>
              </dl>
            </div>

            <!-- Order Items -->
            <div>
              <h3 class="text-sm font-medium text-gray-900 mb-3">
                Order Items
              </h3>
              <div class="space-y-3">
                <% shipment.Order.OrderItems.forEach(item => { %>
                <div
                  class="flex items-center justify-between bg-gray-50 rounded-lg p-3"
                >
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <div
                        class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center"
                      >
                        <svg
                          class="w-5 h-5 text-blue-600"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                          ></path>
                        </svg>
                      </div>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        <%= item.Device.name %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= item.Device.brand %> â€¢ <%= item.Device.catalog %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900">
                      Qty: <%= item.quantity %>
                    </p>
                    <p class="text-xs text-gray-500">
                      $<%= (item.price * item.quantity).toFixed(2) %>
                    </p>
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm border">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
          </div>
          <div class="p-6 space-y-3">
            <% if (!shipment.finalised) { %>
            <a
              href="/shipments/<%= shipment.id %>/edit"
              class="w-full inline-flex items-center justify-center px-4 py-2 border border-blue-300 rounded-md text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 transition-colors"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                ></path>
              </svg>
              Edit Shipment
            </a>

            <form
              method="POST"
              action="/shipments/<%= shipment.id %>/finalize"
              class="w-full"
            >
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to finalize this shipment? This action cannot be undone.')"
                class="w-full inline-flex items-center justify-center px-4 py-2 border border-green-300 rounded-md text-sm font-medium text-green-700 bg-green-50 hover:bg-green-100 transition-colors"
              >
                <svg
                  class="w-4 h-4 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
                Finalize Shipment
              </button>
            </form>

            <form
              method="POST"
              action="/shipments/<%= shipment.id %>/delete"
              class="w-full"
            >
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this shipment? This action cannot be undone.')"
                class="w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-md text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 transition-colors"
              >
                <svg
                  class="w-4 h-4 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                  ></path>
                </svg>
                Delete Shipment
              </button>
            </form>
            <% } else { %>
            <div class="text-center py-4">
              <svg
                class="mx-auto h-8 w-8 text-green-400 mb-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                ></path>
              </svg>
              <p class="text-sm text-gray-500">
                This shipment has been finalized and cannot be modified.
              </p>
            </div>
            <% } %>

            <hr class="my-4" />

            <a
              href="/orders/view/<%= shipment.Order.id %>"
              class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
              View Order Details
            </a>

            <a
              href="/shipments"
              class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 10h16M4 14h16M4 18h16"
                ></path>
              </svg>
              All Shipments
            </a>
          </div>
        </div>

        <!-- Information Box -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">Shipment Status</h3>
              <div class="mt-2 text-sm text-blue-700">
                <% if (shipment.finalised) { %>
                <p>
                  This shipment has been finalized and is ready for processing.
                  No further changes can be made.
                </p>
                <% } else { %>
                <p>
                  This shipment is still pending. You can edit the details or
                  finalize it when ready.
                </p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>

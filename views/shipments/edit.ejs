<%- include('../partials/header') %>

<section class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Shipment #<%= shipment.id %></h1>
      <p class="text-gray-600">Update shipping details and delivery information</p>
    </div>

    <!-- Flash Messages -->
    <% if (locals.flash && locals.flash.error) { %>
      <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
        <%= locals.flash.error %>
      </div>
    <% } %>

    <!-- Back Navigation -->
    <div class="mb-6">
      <a
        href="/shipments/<%= shipment.id %>/details"
        class="inline-flex items-center text-blue-600 hover:text-blue-700 hover:underline"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Shipment Details
      </a>
    </div>

    <!-- Current Shipment Info -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Editing Shipment Information</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p><strong>Shipment ID:</strong> #<%= shipment.id %></p>
            <p><strong>Related Order:</strong> #<%= shipment.Order.id %></p>
            <p><strong>Status:</strong> <%= shipment.finalised ? 'Finalized' : 'Pending' %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Shipment Form -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Update Shipment Details</h2>
      </div>

      <form action="/shipments/<%= shipment.id %>/edit" method="POST" class="p-6 space-y-6">
        <!-- Order Information (Read-only) -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Related Order (Cannot be changed)</h3>
          <div class="text-sm text-gray-700">
            <p><strong>Order ID:</strong> #<%= shipment.Order.id %></p>
            <p><strong>Order Status:</strong> <%= shipment.Order.status %></p>
            <p><strong>Order Date:</strong> <%= new Date(shipment.Order.createdAt).toLocaleDateString() %></p>
          </div>
        </div>

        <!-- Shipping Method -->
        <div>
          <label for="method" class="block text-sm font-medium text-gray-700 mb-2">
            Shipping Method <span class="text-red-500">*</span>
          </label>
          <select
            id="method"
            name="method"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          >
            <option value="">Choose shipping method...</option>
            <option value="Standard Delivery" <%= shipment.method === 'Standard Delivery' ? 'selected' : '' %>>
              Standard Delivery (5-7 business days)
            </option>
            <option value="Express Delivery" <%= shipment.method === 'Express Delivery' ? 'selected' : '' %>>
              Express Delivery (2-3 business days)
            </option>
            <option value="Next Day Delivery" <%= shipment.method === 'Next Day Delivery' ? 'selected' : '' %>>
              Next Day Delivery (1 business day)
            </option>
            <option value="Same Day Delivery" <%= shipment.method === 'Same Day Delivery' ? 'selected' : '' %>>
              Same Day Delivery (within 24 hours)
            </option>
            <option value="Store Pickup" <%= shipment.method === 'Store Pickup' ? 'selected' : '' %>>
              Store Pickup
            </option>
          </select>
          <p class="mt-2 text-sm text-gray-500">
            Current method: <span class="font-medium"><%= shipment.method %></span>
          </p>
        </div>

        <!-- Shipment Date -->
        <div>
          <label for="shipmentDate" class="block text-sm font-medium text-gray-700 mb-2">
            Shipment Date <span class="text-red-500">*</span>
          </label>
          <input
            type="date"
            id="shipmentDate"
            name="shipmentDate"
            value="<%= shipment.shipmentDate %>"
            min="<%= new Date().toISOString().split('T')[0] %>"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          />
          <p class="mt-2 text-sm text-gray-500">
            Current date: <span class="font-medium"><%= new Date(shipment.shipmentDate).toLocaleDateString() %></span>
          </p>
        </div>

        <!-- Delivery Address -->
        <div>
          <label for="addressId" class="block text-sm font-medium text-gray-700 mb-2">
            Delivery Address <span class="text-red-500">*</span>
          </label>
          <% if (addresses.length === 0) { %>
            <div class="border border-gray-300 rounded-md p-4 bg-gray-50">
              <p class="text-gray-500">No delivery addresses found.</p>
              <a
                href="/address/create"
                class="mt-2 inline-flex items-center text-blue-600 hover:text-blue-700 hover:underline text-sm"
              >
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add a new address
              </a>
            </div>
          <% } else { %>
            <select
              id="addressId"
              name="addressId"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">Choose delivery address...</option>
              <% addresses.forEach(address => { %>
                <option value="<%= address.id %>" <%= address.id === shipment.addressId ? 'selected' : '' %>>
                  <%= address.label %> - <%= address.street %>, <%= address.city %>, <%= address.postcode %>
                </option>
              <% }); %>
            </select>
            <div class="mt-2 flex items-center justify-between">
              <p class="text-sm text-gray-500">
                Current address: <span class="font-medium"><%= shipment.Address.label %></span>
              </p>
              <a
                href="/address/create"
                class="inline-flex items-center text-blue-600 hover:text-blue-700 hover:underline text-sm"
              >
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add new address
              </a>
            </div>
          <% } %>
        </div>

        <!-- Current Address Display -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-900 mb-2">Current Delivery Address</h3>
          <div class="text-sm text-gray-700">
            <p class="font-medium"><%= shipment.Address.label %></p>
            <p><%= shipment.Address.street %></p>
            <p><%= shipment.Address.city %>, <%= shipment.Address.postcode %></p>
            <p><%= shipment.Address.country %></p>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
          <a
            href="/shipments/<%= shipment.id %>/details"
            class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
          >
            Cancel
          </a>
          <% if (addresses.length > 0) { %>
            <button
              type="submit"
              class="inline-flex items-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Update Shipment
            </button>
          <% } else { %>
            <button
              type="button"
              disabled
              class="inline-flex items-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-gray-400 bg-gray-200 cursor-not-allowed"
            >
              Update Shipment
            </button>
          <% } %>
        </div>
      </form>
    </div>

    <!-- Warning Notice -->
    <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Important Notes</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ul class="list-disc pl-5 space-y-1">
              <li>Changes will only be saved if the shipment hasn't been finalized</li>
              <li>The related order cannot be changed after shipment creation</li>
              <li>Make sure the new shipment date is appropriate for your selected delivery method</li>
              <li>You can add new addresses if needed before updating the shipment</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6 bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
      </div>
      <div class="p-6 flex flex-wrap gap-3">
        <a
          href="/shipments/<%= shipment.id %>/details"
          class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View Details
        </a>

        <a
          href="/orders/view/<%= shipment.Order.id %>"
          class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          View Order
        </a>

        <a
          href="/shipments"
          class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
          All Shipments
        </a>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %> 